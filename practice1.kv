#:import utils kivy.utils

<Button>:
    size_hint: (1, .1)
    background_normal: ''
    background_color: utils.get_color_from_hex("#e02a1d")

<MyLayouts>:
    BoxLayout:
        orientation: 'vertical'
        size: root.height, root.width
        padding: 10
        spacing: 10

        Label:
            text: 'Student Information Form'
            size_hint: (1, .1)

        TextInput:
            text: '--- Enter Your Name ---'
            size_hint: (1, .1)

        Button:
            text: 'Check'

        Button:
            text: 'Submit'
