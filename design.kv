#:import hex kivy.utils.get_color_from_hex

<MyLayouts>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 20
        spacing: 20

        GridLayout:
            cols: 2

            Label:
                text: 'Python'
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, 'Python')

            Label:
                text: 'Java'
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, 'Java')

            Label:
                text: 'C Programming'
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, 'C Programming')

        Label:
            id: output_label
            text: ''