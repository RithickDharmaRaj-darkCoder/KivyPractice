#:import utils kivy.utils

<Button>:
    size_hint: (.3, .3)
    font_size: 18

<MyLayouts>:
    FloatLayout:
        size: root.width, root.height

        # Creating Buttons...
        # Positioning buttons by dict {'x':, 'y':, 'top':, 'bottom':, 'left':, 'right':}
        Button:
            text: 'top-right'
            pos_hint: {'x':0.7, 'top':1}
        Button:
            text: 'bottom-right'
            pos_hint: {'y':0, 'right':1}
        Button:
            text: 'bottom-left'
            pos_hint: {'y':0, 'bottom':1}
        Button:
            text: 'top-left'
            pos_hint: {'x':0, 'top':1}
        Button:
            text: 'center'
            pos_hint: {'x':.35, 'y':0.35}
