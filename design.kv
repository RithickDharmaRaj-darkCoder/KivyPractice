#:import hex kivy.utils.get_color_from_hex

<MyLayouts>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 20
        spacing: 20

        Button:
            text: 'Check'
            size_hint: (1, 0.5)
            font_size: 38

        RoundedButton:
            text: 'Submit'
            size_hint: (1, 0.2)
            pos_hint: {'center_x': .5}
            font_size: 38
            color: hex('#00000')
            on_press: print('You made!')

<RoundedButton@Button>:
    background_normal: ''
    background_color: (0,0,0,0)
    canvas.before:
        Color:
            rgba: hex('#fffff')
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]