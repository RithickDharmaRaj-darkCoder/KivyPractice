#:import utils kivy.utils

<MyLayouts>:
    name: name
    lbl_name: lbl_name
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 10
        spacing: 10

        Label:
            id: lbl_name
            text: "What's your name ?"
            font_size: 18

        TextInput:
            id: name
            multiline: False
            size_hint: (1, 0.2)

        Button:
            text: 'Submit'
            size_hint: (0.2, 0.3)
            pos_hint: {'center_x': 0.5}
            on_press: root.submit_btn()
