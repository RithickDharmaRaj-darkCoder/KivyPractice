#:import utils kivy.utils

<MyLayouts>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 10
        spacing: 10

        Image:
            source: "images/rdr.png"
            allow_stretch: True
            keep_ratio: True

        Button:
            text: 'Check'
            size_hint: (1, .1)
            background_normal: ''
            background_color: utils.get_color_from_hex("#096ced")

        Button:
            text: 'Submit'
            size_hint: (1, .1)
            background_normal: ''
            background_color: utils.get_color_from_hex("#2ff58e")
            color: (1,0,0,1)
